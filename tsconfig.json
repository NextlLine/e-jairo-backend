{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node", "aws-lambda"],
    "skipLibCheck": true
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
